@model List<BookViewModel>

<h1>All books info:</h1>
<hr />

<table class="table table-hover">
    <tr>
        <th>Title:</th>
        <th>Author:</th>
        <th>Genre:</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td>@item.GenreName</td>
            <td> <a asp-controller="Book" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
            <td> <a asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
            <td> <a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

        </tr>
    }
</table>